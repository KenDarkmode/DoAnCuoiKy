@model IEnumerable<Product>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sản phẩm</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/Images/lg.png">
</head>
<body class="product-body">
    <h1>Sản phẩm</h1>
    <p>
        <a class="btn btn-primary" asp-action="Add">New</a>
    </p>
    <hr />
    <div class="container">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col mt-5">
                    <div class="card" style="width: 18rem;">
                        <img src="@product.ImageUrl" class="card-img-top" style="max-width: 100%; max-height: 300px" />
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p>Loại: @product.Category</p>
                            <!-- Xem sản phẩm -->
                            <a class="btn btn-info" asp-action="Display" asp-route-id="@product.Id">Xem</a> |
                            <!-- Sửa sản phẩm -->
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@product.Id">Sửa</a> |
                            <!-- Xoá sản phẩm -->
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@product.Id">Xoá</a>
                            <!-- Thêm vào giỏ hàng -->
                            <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <label for="quantity">Số lượng:</label>
                                <input type="number" id="quantity" name="quantity" value="1" min="1" />
                                <button class="btn btn-info" type="submit">Thêm vào giỏ hàng</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
